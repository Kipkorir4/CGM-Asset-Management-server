                      "message": { "type": "string", "example": "Unauthorized" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/complaints/{complaint_id}/{action}": {
        "post": {
          "summary": "Handle Complaint Action",
          "description": "Accepts or declines a complaint",
          "operationId": "handleComplaintAction",
          "parameters": [
            {
              "name": "complaint_id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer",
                "example": 1
              }
            },
            {
              "name": "action",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string",
                "enum": ["accept", "decline"],
                "example": "accept"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Complaint action handled successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Complaint accepted successfully" }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Unauthorized" }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Complaint not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Complaint not found" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Invalid action",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Invalid action" }
                    }
                  }
                }
              }
            }
          }
        }
      },
