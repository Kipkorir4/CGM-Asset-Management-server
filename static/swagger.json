          ],
          "responses": {
            "200": {
              "description": "List of users",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "username": { "type": "string", "example": "mainman" },
                        "role": { "type": "string", "example": "CEO" }
                      }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Unauthorized" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/all-complaints": {
        "get": {
          "summary": "Get All Complaints",
          "description": "Retrieves all complaints in the system",
          "operationId": "getAllComplaints",
          "responses": {
            "200": {
              "description": "A list of all complaints",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "tenant": { "type": "string", "example": "houseman" },
                        "complaint_number": { "type": "integer", "example": 1 },
                        "category": { "type": "string", "example": "Maintenance" },
                        "description": { "type": "string", "example": "Leaking roof" },
                        "status": { "type": "string", "example": "Approved" },
                        "amount_allocated": { "type": "number", "format": "float", "example": 500.00 }
                      }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Unauthorized" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/setup_budget": {
        "post": {
          "summary": "Setup Budget",
          "description": "Sets up a budget for a category",
          "operationId": "setupBudget",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "category": { "type": "string", "example": "Maintenance" },
                    "total_budget": { "type": "number", "format": "float", "example": 10000.00 }
                  },
                  "required": ["category", "total_budget"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Budget set up successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Budget set up successfully" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/allocate_budget": {
        "post": {
          "summary": "Allocate Budget",
          "description": "Allocates budget to a complaint",
          "operationId": "allocateBudget",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "complaint_id": { "type": "integer", "example": 1 },
                    "allocation_amount": { "type": "number", "format": "float", "example": 500.00 }
                  },
                  "required": ["complaint_id", "allocation_amount"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Budget allocated successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "success": { "type": "boolean", "example": true },
                      "complaint_number": { "type": "string", "example": "CMP00001" },
                      "new_balance": { "type": "number", "format": "float", "example": 9500.00 }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Insufficient budget balance",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Insufficient budget balance" }
                    }
                  }
                }
              }
            },
            "403": {
              "description": "Unauthorized",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Unauthorized" }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Complaint or budget not found",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Complaint not found" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/enroll": {
        "post": {
          "summary": "Enroll User",
          "description": "Enrolls a new user",
          "operationId": "enrollUser",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string", "example": "newuser" },
                    "password": { "type": "string", "example": "newpassword" },
                    "role": { "type": "string", "example": "Tenant" }
                  },
                  "required": ["username", "password", "role"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User created successfully",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "User created successfully" }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Username already exists",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": { "type": "string", "example": "Username already exists" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/fetch_all_complaints": {
        "get": {
          "summary": "Fetch All Complaints",
          "description": "Fetches all complaints",
          "operationId": "fetchAllComplaints",
